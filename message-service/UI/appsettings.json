{
  "ConnectionStrings": {
    "MongoDb": "mongodb://root:secret@mongodb:27017",
    "MongoDbName": "MessageMongoDb",
    "UserService": "http://user-service:5002"
  },
  "JwtSettings": {
    "Issuer": "http://auth-service",
    "Audience": "http://user-service",
    "Audiences": [
      "http://user-service",
      "http://msg-service",
      "http://ws-service"
    ],
    "Key": "a-string-secret-at-least-256-bits-long"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "http://*:7000",
        "Protocols": "Http2"
      },
      "REST": {
        "Url": "http://*:7001",
        "Protocols": "Http1"
      }
    }
  }
}
